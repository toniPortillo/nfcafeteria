<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Profile Page</title>
        <% include partials/head %>
    </head>

    <body>
        <div class="container">
            <header class="text center">
                <h1>Profile Page</h1>
                <a href="/logout" class="btn btn-light btn-sm">
                    logout
                </a>
            </header>

            <hr>
            <div class="card-deck">
              <div class="card">
                <div class="card-body">
                  <div class="card-body">
                    <h1>
                      <span class="fa fa-sign-in"></span> Complete profile
                    </h1>

                    <form action="/addInfo" method="post">
                      <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control">
                      </div>
                      <div class="form-group">
                            <label for="lastname">Lastname</label>
                            <input type="text" name="lastname" class="form-control">
                      </div>
                      <div class="form-group">
                            <label for="age">Age</label>
                            <input type="number" name="age" min="0" class="form-control">
                      </div>
                      <div class="form-group">
                            <label for="sex">Sex</label>
                            <select name="sex">
                              <option value="Male">Male</option>
                              <option value="Female">Female</option>
                              <option value="Other">Other</option>
                            </select>
                      </div>
                      <div class="form-group">
                          <label for="studies">Studies:</label>
                          <select name="studies">
                              <option value="Grado en ingenieria informatica">Grado en ingeniería informática</option>
                              <option value="Grado en ingenieria electrica">Grado en ingeniería eléctrica</option>
                              <option value="Grado en ingenieria mecanica">Grado en ingeniería mecánica</option>
                              <option value="Grado en ingenieria electronica">Grado en ingeniería electrónica</option>
                              <option value="Grado en ingenieria forestal">Grado en ingeniería forestal</option>
                              <option value="Grado en ingenieria agronoma">Grado eningeniería agronoma</option>
                              <option value="Grado en biologia">Grado en biología</option>
                              <option value="Grado en fisica">Grado en física</option>
                              <option value="Grado en quimica">Grado en química</option>
                              <option value="Grado en cyta">Grado en cyta</option>
                          </select>
                      </div>
                      <div class="form-group">
                          <label for="role">Role:</label>
                          <select name="role">
                            <option value="Student">Student</option>
                            <option value="Teacher">Teacher</option>
                          </select>
                      </div>
                      <input type="submit" class="btn btn-dark btn-lg">
                    </form>
                  </div>
                </div>
                <div class="card-footer">
                  <a href="/logout" class="btn btn.light">
                      Logout
                  </a>
                  <a href="/profile" class="btn btn.light">
                      Go to profile
                  </a>
                </div>
              </div>
              <div class="card">
                <div class="card-body">
                  <div class="card-body">
                      <h3 class="card-title">
                          <span class="fa fa-money"></span> Wallet
                      </h3>
                      <br><br>
                        <blockquote class="blockquote text-center">
                          <h3>
                          <p class=mb-0><strong>Coins: </strong></p><%= user.local.coins %>
                        </h3>
                        </blockquote>
                  </div>
                </div>
                <div class="card-footer">
                  <a href="/" class="btn btn.light">
                      Index
                  </a>
                </div>
              </div>
            </div>
        </div>
    </body>
</html>
